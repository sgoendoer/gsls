{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"@context": {
			"type": "string",
			"enum": ["http://sonic-project.net/"]
		},
		"@type": {
			"type": "string",
			"enum": ["socialrecord"]
		},
		"globalID": {
			"type": "string"
		},
		"type": {
			"type": "string",
			"enum": ["platform", "user"]
		},
		"platformGID": {
			"type": "string"
		},
		"displayName": {
			"type": "string"
		},
		"profileLocation": {
			"type": "string"
		},
		"personalPublicKey": {
			"type": "string"
		},
		"accountPublicKey": {
			"type": "string"
		},
		"salt": {
			"type": "string"
		},
		"datetime": {
			"type": "string"
		},
		"active": {
			"type": "integer"
		},
		"keyRevocationList": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"revokedPublicKey": {
						"type": "string"
					},
					"revocationDate": {
						"type": "string"
					},
					"revocationReason": {
						"type": "integer"
					},
					"signature": {
						"type": "string"
					}
				}
			}
		},
		"trustors":{
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"globalID":{ "type": "string" },
					"signedMessage": { "type": "string"}
				}
			}
		},
		"trustees":{
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"globalID": {"type": "string"}
				}
			}
		}
	},
	"required": ["@context", "@type", "globalID", "type", "platformGID", "displayName", "profileLocation", "personalPublicKey", "accountPublicKey", "salt", "datetime", "active", "keyRevocationList"]
}
